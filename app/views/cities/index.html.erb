<div class="container">
  <%= form_with url: cities_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a city"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

  <% @cities.each do |city| %>
    <h2><%= city.name %></h2>
  <% end %>
</div>
