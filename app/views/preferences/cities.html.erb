<div class='container'>
  <h2 class="mt-3"><span class="petrol_word">where</span> are you going?</h2>
  <%# search bar %>
  <div>
    <%= form_with  url: choose_city_path, method: :get do |form| %>
      <%= form.text_field :city, placeholder: "type a city here", class:"app-italic app-light-text" %>
      <%# style this! %>
      <%= form.submit "Go", class:'btn-small' %>
    <% end %>
  </div>
</div>

<div>
  <div class="container mt-5">
    <p>or choose one of our featured cities</p>
    <%= simple_form_for :city, url: choose_duration_path, method: :get, class: "d-flex" do |f| %>
    <% if @cities.length > 1 %>
      <%= f.input :city, collection: @cities %>
    <% elsif @cities.length == 1%>
      <%= f.input :city, collection: @cities, default: @cities.first %>
    <% end %>
    <%= f.button :button do %>
      <% "OK" %>
      <% end %>
    <% end %>
  </div>
</div>

<%# city cards %>
<div class="container d-flex flex-column">
  <%# <%= form_with choose_duration_path, method: :get do |form| %> %>
    <% @cities.each do |city| %>
      <div>
        <%= link_to cl_image_tag(city.photo.key), choose_duration_path(city: city), class:'cities-card-category' %>
        <h2> <%= city.name %> </h2>
      </div>
    <% end %>
  <%# <% end %> %>
</div>
