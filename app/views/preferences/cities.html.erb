<%# search bar %>
<div>
  <div class="container mt-5">
    <p>or choose one of our featured cities</p>
    <%= simple_form_for :city, url: choose_duration_path, method: :get, class: "d-flex" do |f| %>
    <% if @cities.length > 1 %>
      <%= f.input :city, collection: @cities %>
    <% elsif @cities.length == 1%>
      <%= f.input :city, collection: @cities, default: @cities.first %>
    <% end %>
    <%= f.button :button do %>
      <% "OK" %>
      <% end %>
    <% end %>
  </div>
</div>

<% @cities.each do |city| %>
  <div class="card-category mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path city.photo.key %>')">
    <span><%= city.name%></span>
  </div>
<% end %>

