<div class='container'>
  <h1>Plan your trip</h1>
  <p>hassle-free</p>
  <div>
    <%= form_with  url: choose_city_path, method: :get do |form| %>
      <%= form.text_field :city, placeholder: "Where are you going?" %>
      <%= form.submit "Go" %>
    <% end %>
  </div>
</div>

