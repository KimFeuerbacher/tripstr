<div class="container">
<h2 class="mt-3">How much <span class="petrol_word">time</span> do you have?</h2>
  <%= form_with url: choose_categories_path, method: :get, class: "d-flex" do |form| %>
  <%=
    form.select :duration, ["Half day", "One full day"]
  %>
  <%= submit_tag "Ok", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="card_duration_half mt-3">
<div><strong>half day</strong></div>
<div>3 itmes</div>
</div>

<div class="card_duration_full mt-3">
<div><strong>full day</strong></div>
<div>6 itmes</div>
</div>



