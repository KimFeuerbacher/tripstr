<div class="show-container">
  <div class="sight-card">
    <div id="sight-carousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#sight-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#sight-carousel" data-slide-to="1"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= cl_image_tag @sight.photos.first.key, :alt=>"First slide", class: "show-img d-block w-100"  %>
        </div>
        <div class="carousel-item">
          <%= cl_image_tag @sight.photos.second.key, :alt=>"Second slide", class: "show-img d-block w-100"  %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#sight-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#sight-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="swipe">
      <%= image_tag "swipe-left.png" %>
      <%= image_tag "swipe-right.png" %>
    </div>
  </div>

  <div class="card-description m-3">
    <h1><%= @sight.name %></h1>
    <p><% @sight.category %></p>
    <h4><%= @sight.short_description%></h4>
    <p><%= @sight.long_description%></p>
  </div>

  <div class='card-decide mt-5'>
    <%# No 🙅🏾‍♀️ %>
    <%= link_to sight_sorting_path(sight: @sight) do %>
      <%= image_tag "discard.png", class: "discard-sight" %>
    <% end %>
    <%# Yes ✌🏾 %>
    <%= link_to sight_stops_path(@sight), params: {sight: @sight}, data: { turbo_method: :post} do %>
      <%= image_tag "accept.png", class: "accept-sight" %>
    <% end %>
  </div>

</div>
